@model Nop.Plugin.Widgets.StoreLocator.ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="StoreLocators" asp-action="Configure" method="post">
    <div class="content-header clearfix">
        <div class="pull-right">
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div id="tabStrip" class="nav-tabs-custom">
                    <nop-tabs id="ageconfirm-edit">
                        <nop-tab asp-name="tab-colors" asp-title="@T("Plugin.Widgets.StoreLocator.Configuration.General")" asp-default="true">@await Html.PartialAsync("TabGeneral.cshtml", Model)</nop-tab>
                        <nop-tab asp-name="tab-settings" asp-title="@T("Plugin.Widgets.StoreLocator.Configuration.Locators")">@await Html.PartialAsync("TabLocators.cshtml", Model)</nop-tab>
                    </nop-tabs>
                </div>
            </div>
        </div>
    </div>

</form>

<script>
    $(document).ready(function () {

        bindBootstrapTabSelectEvent('tabStrip');
        
    });
</script>